        <Button Content="Воспитать" HorizontalAlignment="Left" Margin="254,128,0,0" VerticalAlignment="Top" Width="88" Click="Education_Click"/>
        <TextBox x:Name="TextBoxForButton" HorizontalAlignment="Left" Margin="222,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152" Height="32" IsReadOnly="True" TextChanged="TextBoxForButton_TextChanged"/>
        <TextBox x:Name="TextBoxForMyths" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" Height="64" IsReadOnly="True" TextChanged="TextBoxForMyths_TextChanged"/>
