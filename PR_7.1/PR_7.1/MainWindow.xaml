        <Image HorizontalAlignment="Left" Height="100" Margin="45,106,0,0" VerticalAlignment="Top" Width="128" Source="/childrens.png"/>
        <Image HorizontalAlignment="Left" Height="24" Margin="342,47,0,0" VerticalAlignment="Top" Width="24" Source="/food.png"/>
        <Image HorizontalAlignment="Left" Height="25" Margin="344,97,0,0" VerticalAlignment="Top" Width="26" Source="/sleep.png"/>
        <Image HorizontalAlignment="Left" Height="23" Margin="342,73,0,0" VerticalAlignment="Top" Width="24" Source="/wash.png"/>
        <Image HorizontalAlignment="Left" Height="25" Margin="342,125,0,0" VerticalAlignment="Top" Width="27" Source="/education.png"/>
    </Grid>
</Window>
